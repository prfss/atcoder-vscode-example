{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build with AtCoder Library",
      "command": "/usr/bin/g++",
      "args": [
        "-std=gnu++17",
        "-g",
        "-Wall",
        "-Wfatal-errors",
        "-fsanitize=address,undefined",
        "-I${workspaceFolder}/ac-library",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "g++ build with AtCoder Library (DEBUG)",
      "command": "/usr/bin/g++",
      "args": [
        "-std=gnu++17",
